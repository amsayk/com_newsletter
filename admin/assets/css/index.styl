@import './mixin'
@import './form'
@import './item'
@import './toolsbar'
@import './filters'

#toolbar-box
    display: none

div#element-box div.m
    background:none
    border:none

.viewport.editing #new
    display none

.viewport
  position: relative

  > .controller:not(.active)
    display: none

  .toolsbar, .filtering
    display inline-block

  .index
    max-width 1200px

.title
    /*max-width 560px*/
    margin-bottom 20px
    border-bottom 2px solid #ccc

/* ------------------------------------- */

#com_newsletter ::-webkit-scrollbar-track {
}

#com_newsletter ::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.2);
    -webkit-box-shadow: inset 1px 1px 0 rgba(0, 0, 0, 0.10), inset 0 -1px 0 rgba(0, 0, 0, 0.07);
}

#com_newsletter ::-webkit-scrollbar-button {
    width: 0;
    height: 0;
    display: none;
}

#com_newsletter ::-webkit-scrollbar-corner {
    background-color: transparent;
}


/* ------------------------------------------------- */

.popover .inner {
    width: 180px;
}

.popover .content ul li {
    margin: 3px auto;
}

.popover .content ul {
    list-style: none;
    font-size: 13px;
    font-weight: bold;
    color: black;
    margin: 3px auto;
    margin-bottom: 0;
}

/* ------------------------------------------------------------- */

#msg {
 display: none;
 margin-left: 50px;
 max-width: 450px;
 min-width: 250px;
 margin-left: 150px;
}

#msg .alert-message .close {
    margin-top: -4px;
}

#msg .alert-message {
 padding: 5px;
 margin: 0;
}

#msg .alert-message p {

}

#msg .alert-message a:hover {
 background: initial;
}